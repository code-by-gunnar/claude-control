{
  "name": "claude-control",
  "version": "0.1.50",
  "description": "A unified dashboard and CLI tool for discovering, viewing, and managing Claude Code configuration",
  "type": "module",
  "bin": {
    "claude-ctl": "dist/index.js"
  },
  "scripts": {
    "build": "tsup && vite build --config dashboard/vite.config.ts",
    "build:cli": "tsup",
    "build:dashboard": "vite build --config dashboard/vite.config.ts",
    "dev": "tsup --watch",
    "dev:dashboard": "vite --config dashboard/vite.config.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "configuration",
    "devtools"
  ],
  "license": "MIT",
  "author": "code-by-gunnar",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/code-by-gunnar/claude-control.git"
  },
  "homepage": "https://github.com/code-by-gunnar/claude-control#readme",
  "bugs": {
    "url": "https://github.com/code-by-gunnar/claude-control/issues"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "hono": "^4.12.1",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.0",
    "@types/node": "^22.13.4",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "tailwindcss": "^4.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
